void setup(){
  size(800,800);
}

void draw(){
  if(mouseX<width/2 && mouseY<height/2){
    background(200,0,0);
  } else if(mouseX>width/2 && mouseY<height/2){
    background(0,200,0);
  } else if(mouseX>width/2 && mouseY>height/2){
    background(0,0,255);
  } else if(mouseX<width/2 && mouseY>height/2){
    background(255,255,0);
}

line(width/2,0,width/2, height);
line(0,400,800,400);
}
